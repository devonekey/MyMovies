<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.onekey.mymovies.data.Movie.ForMobileApi" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/thumbnail_image_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@color/black"
            android:maxHeight="100dp"
            android:src="@{item.image}"
            app:layout_constraintDimensionRatio="7:10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{item.title}"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/thumbnail_image_view"
            tools:text="title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rating_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/rating_bottom_barrier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"
            app:srcCompat="@drawable/ic_star_rate"
            app:visibleIf="@{item.actual_score}" />

        <TextView
            android:id="@+id/rating_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="@{item.actual_score}"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/rating_bottom_barrier"
            app:layout_constraintStart_toEndOf="@+id/rating_image_view"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"
            app:visibleIf="@{item.actual_score}"
            tools:text="9.99" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/rating_bottom_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="rating_image_view, rating_text_view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/genre_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{item.main_genre_name}"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_bottom_barrier"
            tools:text="액션" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/run_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{item.runtime}"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/genre_text_view"
            app:layout_constraintTop_toBottomOf="@+id/rating_bottom_barrier"
            tools:text="100분" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/open_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/run_time_text_view"
            app:layout_constraintTop_toBottomOf="@+id/rating_bottom_barrier"
            tools:text="2021.10.10 개봉" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
