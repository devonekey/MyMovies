<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.onekey.mymovies.presentation.view.MainFragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_main_to_movie_detail"
            app:destination="@+id/movie_detail_fragment" />
    </fragment>

    <fragment
        android:id="@+id/movie_detail_fragment"
        android:name="com.onekey.mymovies.presentation.view.MovieDetailFragment"
        tools:layout="@layout/fragment_movie_detail">

        <argument
            android:name="position"
            app:argType="java.lang.Integer" />
    </fragment>
</navigation>
